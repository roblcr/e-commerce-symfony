{% extends 'base.html.twig' %}


{% block title %}{{ product.name }}{% endblock %}

{% block content %}

    <!-- Product Details Area Start -->
    <div class="single-product-area section-padding-100 clearfix">
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mt-50">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Furniture</a></li>
                            <li class="breadcrumb-item"><a href="#">Chairs</a></li>
                            <li class="breadcrumb-item active" aria-current="page">{{ product.name }}</li>
                        </ol>
                    </nav>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-lg-7">
                    <div class="single_product_thumb">
                        <div id="product_details_slider" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li class="active" data-target="#product_details_slider" data-slide-to="0" style="background-image: url(/uploads/{{ product.illustration }});">
                                </li>
                                <li data-target="#product_details_slider" data-slide-to="1" style="background-image: url(/uploads/{{ product.illustration }});">
                                </li>
                                <li data-target="#product_details_slider" data-slide-to="2" style="background-image: url(/uploads/{{ product.illustration }});">
                                </li>
                                <li data-target="#product_details_slider" data-slide-to="3" style="background-image: url(/uploads/{{ product.illustration }});">
                                </li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <a class="gallery_img" href="/uploads/{{ product.illustration }}">
                                        <img class="d-block w-95" src="/uploads/{{ product.illustration }}" alt="First slide">
                                    </a>
                                </div>
                                <div class="carousel-item">
                                    <a class="gallery_img" href="/uploads/{{ product.illustration }}">
                                        <img class="d-block w-95" src="/uploads/{{ product.illustration }}" alt="Second slide">
                                    </a>
                                </div>
                                <div class="carousel-item">
                                    <a class="gallery_img" href="/uploads/{{ product.illustration }}">
                                        <img class="d-block w-95" src="/uploads/{{ product.illustration }}" alt="Third slide">
                                    </a>
                                </div>
                                <div class="carousel-item">
                                    <a class="gallery_img" href="/uploads/{{ product.illustration }}">
                                        <img class="d-block w-95" src="/uploads/{{ product.illustration }}" alt="Fourth slide">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-5">
                    <div class="single_product_desc">
                        <!-- Product Meta Data -->
                        <div class="product-meta-data">
                            <div class="line"></div>
                            <p class="product-price">{{ (product.price / 100)|number_format(2, ',', '.')}} â‚¬</p>

                                <h5>{{ product.name }}</h5>

                            <!-- Ratings & Review -->
                            <div class="ratings-review mb-15 d-flex align-items-center justify-content-between">
                                <div class="ratings">
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                </div>
                                <div class="review">
                                    <a href="#">Write A Review</a>
                                </div>
                            </div>
                            <!-- Avaiable -->
                            <p class="avaibility"><i class="fa fa-circle"></i> In Stock</p>
                        </div>

                        <div class="short_overview my-5">
                            <p>{{ product.description }}</p>
                        </div>

                        <!-- Add to Cart Form -->

                        <div class="cart">
                            <a href="{{ path('add_to_cart', {'id' : product.id}) }}" data-toggle="tooltip" data-placement="left" title="Add to Cart"><img src="{{ asset('assets/img/core-img/cart.png') }}" alt=""></a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Product Details Area End -->
{% endblock %}